<%= form_for @skill_requirement, :validate => true, :html => {:class => 'form-stacked skill-requirement span10'} do |f| %>
    <fieldset>
      <legend>Poptávkový formulář</legend>

      <ol class="numbered">
        <li class="clearfix">
          <label for="who" class="">Koho
            <small>hledáte na práci?</small>
          </label>


          <div class="input">
            <div class="input-append">
              <%= f.select :skill_list, @skill_tags_menu, {}, {:multiple => false,
                                                               :data_placeholder => 'Vyber remeslo',
                                                               :class => 'skill_select span5'} %>
              <span class="add-on">&nbsp;</span>
            </div>
            <script type="text/javascript">
                wiki = <%=raw @skill_tags_json %>;
            </script>
            <p class="wiki">
              <small>Profese:</small>
              <span class="content">...</span></p>
          </div>
        </li>
        <li class="clearfix">
          <label for="when">Kdy
            <small>chcete začít s prací?</small>
          </label>
          <ul class="inputs-list">
            <li>
              <label class="switch">
                <%#= radio_button_tag 'skill_requirement[when_flexible]', 'flexible', false %>
                <%= f.radio_button :when_type, 'flexible', :checked => true %>
                <span>Jsem flexibilní během:</span>
              </label>
              <%= f.select :when_flexible, SkillRequirement::WHEN_FLEXIBLE.collect { |v| [v, v] } %>

            </li>
            <li>
              <label class="switch">
                <%= f.radio_button :when_type, 'urgent' %>
                <span>Během několika hodin (spěchám)</span>
              </label>

              <p style="display: none;"><strong>Note:</strong> Rozeslat firmám, které mohou přijít okamžitě.</p>
            </li>
            <li>
              <label class="switch">
                <%= f.radio_button :when_type, 'specific' %>
                <span>Přesně stanovenou dobu:</span>
              </label>

              <div class="inline-inputs date-time">

                <p>
                  <%= f.text_field :when_1_date, :class => 'datepicker' %> <strong>mezi:</strong>
                  <%= f.time_select :when_1_hour_from, { :default => Time.now.change(:hour => 21),
                                                         :simple_time_select => true,
                                                         :minute_interval => 30,
                                                         :time_separator => "/" } %>
                  <%#= select_hour(Time.now, {:field_name => 'stride', :prompt => 'Choose hour'}, :class => 'span2') %>
                  <%#= f.text_field :when_1_hour_from, :class => 'mini' %> <strong>a:</strong>
                  <%#= f.text_field :when_1_hour_till, :class => 'mini' %>
                </p>
              </div>
              <p><a href="e" class="add-date-time"> + Pridat alternativni cas</a> - (může zvýšit počet nabídek)</p>

            </li>
          </ul>
        </li>

        <li class="clearfix">
          <label for="who">Kde
            <small>se práce uskuteční? <a href="#" class="offset1" rel="popover" title="Napoveda">Pomoc?</a></small>
          </label>

          <div class="input">

            <div class="input-append"><%= f.text_field :where, :placeholder => 'PSČ nebo Město', :class => 'span5' %>
              <span class="add-on">&nbsp;</span>
            </div>
          </div>
        </li>

        <li class="clearfix">
          <label class="" for="who">Co
            <small> za práci se musí provést? <a href="3" class="offset3" rel="popover" title="Nápověda">Pomoc?</a>
            </small>
          </label>

          <div class="input">
            <%= f.text_area :description, :rel => 'popover', :title => 'Doporučení', :rows => 3,
                            :placeholder => 'Podrobné zadání práce', :class => 'span8' %>
            <!--<textarea class="span8 help" title="Test" rel="popover" name="textarea" id="textarea" rows="3" placeholder='Popis zadádní pro firmu'></textarea>-->

            <div class="help-content hidden">
              <h6>Obkladač</h6>
              <ol>
                <li>Kolik m2</li>
                <li>Jaká barva</li>
                <li>Materiál</li>
              </ol>
              <h6>Natěrač</h6>
              <ol>
                <li>Kolik m2</li>
                <li>Jaká barva</li>
                <li>Materiál</li>
              </ol>
            </div>
          </div>

        </li>

      </ol>
    </fieldset>
    <div class="actions">
      <%= f.submit 'Odeslat poptávku', :class => 'btn primary offset6' %>
      <!--<input type="submit" value="Odeslat potávku" class="btn primary offset6">&nbsp;-->
    </div>

<% end %>




