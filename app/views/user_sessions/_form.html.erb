<%= nested_form_for User.new, :as => :user_session, :url => user_sessions_path, :validate => true,
                    :html => {:id => 'new_user_session', :class => 'form-stacked user-form'} do |f| %>
    <div class="clearfix">
      <h3>Můj účet</h3>
      <span class="help-block">Vstup na tvůj registrovaný účet</span>
    </div>

    <div class="clearfix">
      <%= f.label :email %>
      <div class="input">
        <%= f.text_field :email %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :password %>
      <div class="input">
        <%= f.password_field :password %>
      </div>
    </div>

    <div class="clearfix">
      <div class="input">
        <ul class="inputs-list">
          <li>
            <%= label_tag do -%>
                <%= check_box_tag :remember %>
                keep me logged in
            <% end %>
          </li>
        </ul>

      </div>
    </div>

    <div class="actions">
      <%= f.submit :class => 'btn primary', :value => 'Vstup' %>
    </div>

<% end %>
