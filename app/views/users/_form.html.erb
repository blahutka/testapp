
<%= nested_form_for User.new, :validate => true, :html => {:id => 'registration-form',
                                                        :class => 'form-stacked user-new user-form'} do |f| %>
    <div class="clearfix">
      <h3>Registrace</h3>
      <span class="help-block">Vytvoř si svůj vlastní účet</span>
    </div>

    <div class="clearfix">
      <%= f.label :email %>
      <div class="input">
        <%= f.text_field :email %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :password %>
      <div class="input">
        <%= f.password_field :password %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :password_confirmation %>
      <div class="input">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit :class => 'btn primary', :value => 'Registruj se' %>
    </div>

<% end %>
