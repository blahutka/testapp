<% case params[:template] %>
<% when 'attachment' %>
$('#modal-box ul').append('<%= escape_javascript(
    render :partial => 'account/profiles/attachments/attachment', :object => @profile.attachments.last
    ) %>');
var carousel = jQuery('#mycarousel').data('jcarousel');
var size = carousel.size() + 1;
jQuery('#mycarousel').jcarousel('add', size, '<%= escape_javascript(
     render :partial => 'account/profiles/attachments/attachment', :object => @profile.attachments.last
    ) %>');
carousel.size(size);
<% when 'destroy' %>
<%= modal_window do |window| %>
<% window.js(:html, '.body', render(:partial => 'account/profiles/attachments/form_destroy', :object => @profile, :as => :profile)) %>
<% end %>

<% when 'description' %>
 $('#modal-box').modal('hide');
<% else %>
<%= %>
<% end %>